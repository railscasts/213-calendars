<%= error_messages_for :article %>
<% form_for @article do |f| %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :published_on %><br />
    <%= f.text_field :published_on %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content, :rows => "10", :cols => "30" %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
